+
+
 #ifdef __cplusplus
 extern "C" {
 	/* Assume C declarations for C++ */
@@ -499,6 +502,13 @@ static void __inline blas_lock(volatile BLASULONG *address){
 #include "common_param.h"
 
 #ifndef STDERR
+
