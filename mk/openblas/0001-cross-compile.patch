 Makefile.system |  6 +++---
 common.h        | 10 ++++++++++
 2 files changed, 13 insertions(+), 3 deletions(-)

diff --git a/Makefile.system b/Makefile.system
index bd361a1..9c81c5e 100644
--- a/Makefile.system
+++ b/Makefile.system
@@ -238,12 +238,12 @@ MD5SUM = md5 -n
 endif
 
 ifeq ($(OSNAME), Linux)
-EXTRALIB	+= -lm
+#EXTRALIB	+= -lm
 NO_EXPRECISION = 1
 endif
 
 ifeq ($(OSNAME), Android)
-EXTRALIB	+= -lm
+#EXTRALIB	+= -lm
 endif
 
 ifeq ($(OSNAME), AIX)
@@ -498,7 +498,7 @@ endif
 
 ifeq ($(OSNAME), Android)
 ifeq ($(ARM_SOFTFP_ABI), 1)
-EXTRALIB	+= -lm
+#EXTRALIB	+= -lm
 else
 EXTRALIB	+= -Wl,-lm_hard
 endif
diff --git a/common.h b/common.h
index 4463141..f3d9d32 100644
--- a/common.h
+++ b/common.h
@@ -39,6 +39,9 @@
 #ifndef COMMON_H
 #define COMMON_H
 
